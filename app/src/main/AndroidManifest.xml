<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ByteInsight"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".AboutScreen"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_about_screen"
            android:theme="@style/Theme.ByteInsight"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Preferences"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_preferences"
            android:theme="@style/Theme.ByteInsight"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".PagerActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_pager"
            android:theme="@style/Theme.ByteInsight"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".LessonActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="@string/title_activity_lesson"
            android:theme="@style/Theme.ByteInsight"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.ByteInsight"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>